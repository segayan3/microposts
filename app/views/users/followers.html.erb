<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @followers %>
      <h3>followers (<%= @followers.count %>)</h3>
      <ol class="followers">
        <%= render @followers %>
      </ol>
    <% end %>
  </div> 
</div>