<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_avatar' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_info' %>
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <%= paginate @microposts %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
