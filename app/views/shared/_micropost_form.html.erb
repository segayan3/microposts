<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= f.label :video %>
    <%= f.file_field :video %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>